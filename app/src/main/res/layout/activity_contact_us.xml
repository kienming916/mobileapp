<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="#F2E6C6"
    android:id="@+id/interface4"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/andlogo"
            android:layout_width="240dp"
            android:layout_height="240dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:src="@drawable/partner"/>

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="15dp"
            android:text="Contact us"
            android:textColor="#B16F5B"
            android:textStyle="bold"
            android:textSize="30sp"
            android:shadowColor="@color/white"
            android:shadowRadius="15"
            android:shadowDx="1"
            android:shadowDy="1"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#F4E3AE">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:text="Advisor"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="20sp"
                android:shadowColor="@color/white"
                android:shadowRadius="10"
                android:shadowDx="1"
                android:shadowDy="1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="5dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="14sp"
                android:shadowColor="@color/white"
                android:shadowRadius="10"
                android:shadowDx="1"
                android:shadowDy="1"
                android:justificationMode="inter_word"
                android:letterSpacing="0.07"
                android:text="Prof Lim Yeow Khee\n(Tan Kah Kee International Society)\n\nProf Kwek Leong Chuan\n(Tan Kah Kee International Society)\n\nProf Ong Choon Nam\n(Tan Kah Kee International Society)Tan Sri Dato Lim Guan Teik   (Nantah Education and Research Foundation)\n\nProf Dato Liew Choong Chin\n(Nantah Education and Research Foundation)\n\nDr Mok Soon Chong\n(New Era University College)"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:orientation="vertical">
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#F4E3AE">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:text="Chairman"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="20sp"
                android:shadowColor="@color/white"
                android:shadowRadius="10"
                android:shadowDx="1"
                android:shadowDy="1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="5dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="14sp"
                android:shadowColor="@color/white"
                android:shadowRadius="10"
                android:shadowDx="1"
                android:shadowDy="1"
                android:justificationMode="inter_word"
                android:letterSpacing="0.07"
                android:text="Dr Lim Chong Keang\n(Nantah Education and Research Foundation)"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:orientation="vertical">
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#F4E3AE">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:text="Committee"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="20sp"
                android:shadowColor="@color/white"
                android:shadowRadius="10"
                android:shadowDx="1"
                android:shadowDy="1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="5dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="14sp"
                android:shadowColor="@color/white"
                android:shadowRadius="10"
                android:shadowDx="1"
                android:shadowDy="1"
                android:justificationMode="inter_word"
                android:letterSpacing="0.07"
                android:text="Mr Ting Buoi Ho\n(Nantah Education and Research Foundation)\n\nMr Sam Swee Low\n(Nantah Education and Research Foundation)\n\nDr Yap Kam Fai\n(Nantah Education and Research Foundation)\n\nMr Chng Chern Wei\n(New Era University College)\n\nMs Ho Jean-Ny\n(New Era University College)"/>
        </LinearLayout>

        <Button
            android:id="@+id/btnback"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Back"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:backgroundTint="#F6B82E"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/btnhomepage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Home page"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:backgroundTint="#F6B82E" />

    </LinearLayout>
</ScrollView>